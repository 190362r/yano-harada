       <div class="wash_<%= "red" if @wash3.situation == 1%>box">3</div>
     </div>

     <!--区画2-->
       <div class="kukaku2">
       <div class="wash_<%= "red" if @wash4.situation == 1%>box">4 </div>
       <div class="wash_<%= "red" if @wash5.situation == 1%>box">5 </div>
     </div>

     <!--区画３-->
     <div id="kukaku3">
     <div class="kukaku3a">
     <div class="wash_<%= "red" if @wash6.situation == 1%>box"> 6</div>
     </div>

     <div class="clear"></div>

     <div class="kukaku4">
     <div class="wash_<%= "red" if @wash8.situation == 1%>box">8 </div>
