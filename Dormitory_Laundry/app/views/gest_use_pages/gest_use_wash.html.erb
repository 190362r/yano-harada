     <div class="kuhaku"></div>

     <div class="wash_<%= "red" if @wash12.situation == 1%>box"> 12</div>
     <div class="wash_<%= "red" if @wash13.situation == 1%>box">13</div>
     </div>

     <div class="clear"></div>

     <div class="kukaku5">
     <div class="wash_<%= "red" if @wash14.situation == 1%>box"> 14</div>
     <div class="wash_<%= "red" if @wash15.situation == 0%>box"> 15</div>

     <div class="kuhaku"></div>

     <div class="wash_<%= "red" if @wash16.situation == 1%>box"> 16</div>
     <div class="wash_<%= "red" if @wash17.situation == 0%>box">17</div>

     <div class="kuhaku"></div>

     <div class="wash_<%= "red" if @wash18.situation == 1%>box"> 18</div>
     <div class="wash_<%= "red" if @wash19.situation == 1%>box">19</div>
     </div>

     <div class="clear"></div>


     <div class="kukaku3b">
     <div class="wash_<%= "red" if @wash7.situation == 1%>box"> 7</div>
     </div>
     </div>


     <!-- 区画6 -->
     <div class="kukaku6">
     <div class="wash_<%= "red" if @wash20.situation == 1%>box">20</div>
     <div class="wash_<%= "red" if @wash21.situation == 1%>box">21</div>
     </div>

     <!-- 区画7 -->
     <div class="kukaku7">
     <div class="wash_<%= "red" if @wash22.situation == 1%>box">22</div>
     <div class="wash_<%= "red" if @wash23.situation == 1%>box">23</div>
     <div class="wash_<%= "red" if @wash24.situation == 1%>box">24</div>
     </div>
     </div>

     <div class="redbox">
     <div class="wash_redbox"></div>
     <div class="test" style="float: left"><h2 style="color: red">・・・使用中</h2></div>
     </div>
     <div class="bluebox">
     <div class="wash_box"></div>
     <div class="test" style="float: left"><h2 style="color: #0099ff">・・・未使用</h2></div>
     </div>
</body>
</html>
